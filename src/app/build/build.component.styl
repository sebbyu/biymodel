.layers
  height 1100px
  .layer
    height 70px
    width 200px
    margin 0 0 20px 0
    color black
    background-color white
    border-radius 10px
    border none
    position relative
    left 80%
    top 10%
    display flex
    justify-content center
    align-items: center
    cursor pointer
    transition box-shadow 200ms
    &:hover
      color red

.data
  #label
    color red
  #button
    outline none 
    border none
    border-radius 30px
    // padding 10px 40px
    font-weight bold
    background-color indianred
    color white
