.main
  width 60%
  display flex
  justify-content center
  align-items center
  height 100vh
  position relative
  margin auto
  .frame
    text-align center
    .title
      font-family Chalkduster, fantasy
      font-size 100px
      color #faebfa
      text-align center
      line-height 95%
      padding 30px
    .subtitle
      color #faebfa
      font-weight 400
    .progress
      height 25px
      .progress-bar
        width 50%
        height 100%
        font-weight bold
        background-color indianred
        font-size 20px
    .button
      background-color indianred
      color white
      outline none 
      font-size 15px
      letter-spacing 3px
      border none
      border-radius 30px
      padding 10px 40px
      font-weight bold
      margin 30px