.main
  width 100%
  height 100vh
  display flex
  align-items center
  justify-content center
  .title
    #title
      font-family Chalkduster, fantasy
      color#faebfa
      font-weight 1000
      font-size 120px
      letter-spacing 2px
    #tag
      color#faebfa
      font-size 20px
      text-align center
      padding 20px
      font-weight 200
    #button
      font-size 15px
      letter-spacing 3px
      outline none 
      border none
      border-radius 30px
      padding 10px 40px
      font-weight bold
      background-color indianred
      color white
      position relative
      left 50%
      transform translateX(-50%)
      margin-top 30px
          
        

    