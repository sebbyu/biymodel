.navbar
  width 100%
  background-color black
  color white
  font-size 22px
  align-items center
  display grid
  grid-template-columns 1fr 3fr 5fr
  .logo_bar
    #logo
      font-size 50px
      cursor pointer
      transition 0.2s ease
      &:hover
        color gold
  .nav_bar
    display flex
    justify-content space-between
    #element
      list-style none
      cursor pointer
      font-weight bold
      transition 0.2s ease
      outline none
      &:hover
        color #eaaeea
    .active
      color #eaaeea
  .login_bar
    .bag
      float right
      li
        margin 0 20px
        cursor pointer
        transition 0.2s ease
        &:hover
          color lightgreen
        #tooltip
          position absolute
          transform translateX(-20%)
          font-size 13px
          opacity 0
      li 
        &:hover
          #tooltip
            opacity 1