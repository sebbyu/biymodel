.main
  .top
    #form
      #title
        color white
      #input
        color white
  .bottom
    display flex
    justify-content center
    .model-list, .linear-list, .activation-list
      width: 400px
      max-width: 100%
      margin: 100px 50px
      display: inline-block
      vertical-align: top
      #title
        color white
        display flex
        justify-content: center
      .model-layers, .linear-layers, .activation-layers
        border: solid 1px #ccc
        min-height: 60px
        background: white
        border-radius: 4px
        overflow: hidden
        display: block
        .model-box, .linear-box, .activation-box
          padding: 20px 10px
          border-bottom: solid 1px #ccc
          color: rgba(0, 0, 0, 0.87)
          display: flex
          flex-direction: row
          align-items: center
          justify-content: space-between
          box-sizing: border-box
          cursor: move
          background: white
          font-size: 14px

.layers
  height 1100px
  .layer
    height 70px
    width 200px
    margin 0 0 20px 0
    color black
    background-color white
    border-radius 10px
    border none
    position relative
    left 80%
    top 10%
    display flex
    justify-content center
    align-items: center
    cursor pointer
    transition box-shadow 200ms
    &:hover
      color red


.cdk-drag-preview {
  box-sizing: border-box;
  border-radius: 4px;
  box-shadow: 0 5px 5px -3px rgba(0, 0, 0, 0.2),
              0 8px 10px 1px rgba(0, 0, 0, 0.14),
              0 3px 14px 2px rgba(0, 0, 0, 0.12);
}

.cdk-drag-placeholder {
  opacity: 0;
}

